<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="ch.wellernet.hometv.master.impl" />
	<context:component-scan base-package="ch.wellernet.hometv.master.impl" use-default-filters="false"
		scope-resolver="ch.wellernet.hometv.util.spring.PrototypeScopeResolver">
		<context:include-filter type="annotation" expression="ch.wellernet.hometv.util.restlet.Restlet" />
	</context:component-scan>

</beans>